# Supabase Configuration (optional)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# CSRF Protection (required)
CSRF_SECRET=your_32_character_random_string

# Encryption Key (required for BYOK if enabled)
ENCRYPTION_KEY=your_base64_encryption_key

# AI Model API Key (required)
OPENROUTER_API_KEY=your_openrouter_api_key

# Linkup Search (optional - prospect research with curated domains)
# Get your free API key at https://app.linkup.so (no credit card required)
# Best for: SEC filings, FEC contributions, foundation 990s, property records, corporate data
LINKUP_API_KEY=your_linkup_api_key

# Exa Search (optional - semantic/neural web search)
# Get your API key at https://dashboard.exa.ai - $10 free credits
# Best for: finding similar content, semantic queries, broad web search
EXA_API_KEY=your_exa_api_key

# Brave Search (optional - general-purpose web search)
# Get your API key at https://brave.com/search/api/ - 2,000 free queries/month
# Best for: general web queries, backup when other search tools don't find results
BRAVE_API_KEY=your_brave_api_key

# FEC API (optional - Federal Election Commission political contributions)
# Get your FREE API key at https://api.data.gov/signup/
# Rate limit: 1,000 requests/hour with API key
# Best for: searching individual political contributions, donor research, wealth indicators
FEC_API_KEY=your_fec_api_key

# US Government Data APIs (no API key required for most endpoints)
# USAspending, Treasury Fiscal Data, and Federal Register APIs are FREE
# Get an optional api.data.gov key for higher rate limits: https://api.data.gov/signup/
# Best for: federal contracts/grants (USAspending), national debt (Treasury), regulations (Federal Register)
DATA_GOV_API_KEY=your_data_gov_api_key

# SEC EDGAR API (no API key required)
# The sec-edgar-api package fetches directly from SEC EDGAR
# Automatically throttled to 10 requests/second
# Best for: 10-K/10-Q filings, financial statements, executive compensation

# Autumn Subscriptions (optional - for subscription management)
# Get your TEST API key from https://app.useautumn.com/sandbox/dev
# For production, use your live key from https://app.useautumn.com/live/dev
AUTUMN_SECRET_KEY=your_autumn_secret_key

# PostHog Analytics (optional - for product analytics and user behavior tracking)
# Get your API key from https://posthog.com
# person_profiles: 'identified_only' - Only creates profiles for logged-in users
# capture_pageview: false - Manual pageview tracking for better control
# autocapture: Captures clicks and form submits on buttons and links
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_POSTHOG_ENABLE_RECORDINGS=false

# Production Configuration (optional)
NEXT_PUBLIC_VERCEL_URL=your_production_domain

# Development Tools (optional)
ANALYZE=false
